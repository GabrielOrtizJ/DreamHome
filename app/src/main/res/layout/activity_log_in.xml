<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_beta2"
    tools:context=".auth.logIn">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="293dp"
        android:layout_height="132dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/anton"
        android:gravity="center"
        android:text="INGRESAR"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/authLogInlinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="340dp"
        android:layout_height="169dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="104dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/logInButton"
            android:layout_width="286dp"
            android:layout_height="65dp"
            android:background="@drawable/botones"
            android:fontFamily="@font/anton"
            android:gravity="center"
            android:padding="10dp"
            android:text="Acceder"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/logInGoogleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/common_google_signin_btn_text_light_focused"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="Google" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/authLogInlinearLayout"
        android:layout_width="311dp"
        android:layout_height="149dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="288dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/logInEmailTextView"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Introduzca su Email"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/logInPwdTextView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ems="10"
            android:gravity="center"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>