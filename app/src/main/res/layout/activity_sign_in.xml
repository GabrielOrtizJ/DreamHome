<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_beta2"
    tools:context=".auth.signIn">

    <TextView
        android:id="@+id/textView"
        android:layout_width="307dp"
        android:layout_height="126dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/anton"
        android:gravity="center"
        android:text="REGISTRARSE"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="316dp"
        android:layout_height="152dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="268dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/signInEmailTextView"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Introduzca su Email"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/signInPwdTextView"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:ems="10"
            android:gravity="center"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword" />

    </LinearLayout>

    <TextView
        android:id="@+id/sigInButton"
        android:layout_width="219dp"
        android:layout_height="63dp"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/botones"
        android:fontFamily="@font/anton"
        android:gravity="center"
        android:text="Registrar"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>